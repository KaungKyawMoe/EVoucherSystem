@using EVoucherSystem.Dtos
@model IEnumerable<EVoucherDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Evoucher List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                ExpiredDate
            </th>
            <th>
                Amount
            </th>
            <th>
                MaxBuyLimit
            </th>
            <th>
                GiftPerUserLimit
            </th>
            <th>
                IsActive
            </th>
            <th>
                IsDeleted
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                        <label>@item.Id</label>
                    </td>
                    <td>                    
                        <label>@item.Title</label>
                    </td>
                    <td>                    
                        <label>@item.Description</label>
                    </td>
                    <td>                    
                        <label>@item.ExpiredDate</label>
                    </td>
                    <td>                    
                        <label>@item.Amount</label>
                    </td>
                    <td>                    
                        <label>@item.MaxBuyLimit</label>
                    </td>
                    <td>                    
                        <label>@item.GiftPerUserLimit</label>
                    </td>
                    <td>                    
                        <label>@item.IsActive</label>
                    </td>
                    <td>                    
                        <label>@item.IsDeleted</label>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>